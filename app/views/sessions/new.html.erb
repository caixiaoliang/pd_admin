
<div class="row">
  <div class="col-sm-6 col-sm-offset-3 jumbotron" style="padding-top: 20px;">
    <div class="login_or_register ">
    <h3 style="text-align:center;">登录</h3>
      <div class="login">
        <%= form_for(@user, url: login_path, method: :post) do |f| %>

            <div class="form-group">
              <%= f.text_field :name, autofocus: true,class: "form-control input-lg", placeholder: "请输入昵称" %>
            </div>
            <div class="error"><%= @user.errors[:name].join(",")%></div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off",class: "form-control input-lg",placeholder: "请输入密码" %>
            <div class="error"><%=@user.errors[:password].join(",")%></div>
          </div>

          <div class="submit">
            <%= f.submit "登陆",class: "btn btn-lg btn-primary btn-block" %>
          </div>
        <% end %>
      </div>     
    </div>

  </div>
</div>
